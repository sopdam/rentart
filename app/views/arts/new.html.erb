<%= simple_form_for [@art] do |f| %>
  <%= f.input :title %>
  <%= f.input :artist %>
  <%= f.input :description %>
  <%= f.input :dimensions %>
  <%= f.input :city %>
  <%= f.input :price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add a piece of art", class: "btn btn-primary" %>
<% end %>

<%= link_to "See all pieces of art", arts_path %>
